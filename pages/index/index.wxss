/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

#look-weather{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.usermotto {
  margin-top: 10px;
}
.joke-title{
  margin: 20px 5px 5px 5px;
  font-size: 14px;
  font-weight: bolder;
}
.joke{
margin: 5px;
font-size: 12px;
}
.red-color{
  color:red;
}
.border-mm{
  border:2px solid #eee;
}


.controls {
  position: relative;
  top: 50%;
  height: 50px;
  margin-top: -25px;
  display: flex;
}
.play,
.pause,
.time {
  flex: 1;
  height: 100%;
}
.time {
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  line-height: 50px;
}
.img {
  width: 40px;
  height: 40px;
  margin: 5px auto;
}